<div class="container">

<h3>Lista de candidatos inscritos na vaga</h3>

    <div class="row">
        <div class="col-sm-10">
            
            <table class="table table-striped table-bordered">
                
                <thead class="thead-dark">
                    <tr>
                        <th>CANDIDATOS</th>
                    </tr>
                </thead>
                
                <tbody>
                    <%if @registereds.empty?%>
                        
                        <tr>
                            <td>A vaga n√£o possui candidatos inscritos</td>
                        </tr>

                    <%else%>
                        
                        <% @registereds.each do |registered|%>
                            <tr>
                                <td>
                                    <div class="col">
                                        <%= link_to "#{registered.candidate.profile.name} - #{registered.candidate.profile.calculates_candidate_age}", profile_path(registered.candidate.profile)%>
                                    </div>
                                    <div class="col">
                                        <%=registered.registered_justification%> 
                                    </div>
                                </td>
                            </tr>
                        <%end%>

                    <%end%>
                </tbody>

            </table>
            
        </div>
    </div>
</div>